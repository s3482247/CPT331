@using CPT331.Web.Models.Account
@model UserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="loginForm" autoCompleteType="disable">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken();
        <br/><br />
        <img src="~/Content/Images/key.png" />
        <h1>Administator Login</h1>
        <hr />
        <br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.LoginName, new { @class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LoginName, new {autocomplete="off", @class = "form-control"})
                @Html.ValidationMessageFor(m => m.LoginName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>
        </div>
    }
</section>
